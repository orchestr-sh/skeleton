{
  "name": "@orchestr-sh/skeleton",
  "version": "1.1.1",
  "description": "Official starter skeleton for Orchestr - Laravel for TypeScript",
  "main": "dist/bootstrap/app.js",
  "types": "dist/bootstrap/app.d.ts",
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc && cp -r resources dist/resources && mkdir -p dist/storage/framework/cache/data && mkdir -p dist/database",
    "dev": "tsx watch public/index.ts",
    "start": "node dist/public/index.js",
    "orchestr": "tsx bootstrap/cli.ts",
    "migrate": "tsx bootstrap/cli.ts migrate",
    "seed": "tsx bootstrap/cli.ts seed",
    "fresh": "tsx bootstrap/cli.ts migrate:fresh",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:lint": "oxlint . --type-aware && prettier --check .",
    "test:types": "oxlint . --type-aware --type-check",
    "lint": "oxlint . --type-aware --fix && prettier --write ."
  },
  "keywords": [
    "orchestr",
    "laravel",
    "typescript",
    "framework",
    "skeleton"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@orchestr-sh/orchestr": "^1.9.0",
    "better-sqlite3": "^11.0.0",
    "drizzle-orm": ">=0.30.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.2",
    "prettier": "^3.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
